{
    "project-ver":   "2.0",
    "eklips-ver":    "4.0A",

    "game_name":     "Eklips Editor",

    "keys": {
        "cursorup": {
            "keys": ["w","up"],
            "holdable": false
        },
        "moveup": {
            "keys": ["w","up"],
            "holdable": true
        },
        "cursordown": {
            "keys": ["s","down"],
            "holdable": false
        },
        "movedown": {
            "keys": ["s","down"],
            "holdable": true
        },
        "cursorleft": {
            "keys": ["a","left"],
            "holdable": false
        },
        "moveleft": {
            "keys": ["a","left"],
            "holdable": true
        },
        "cursorright": {
            "keys": ["d","right"],
            "holdable": false
        },
        "moveright": {
            "keys": ["d","right"],
            "holdable": true
        },
        "eng_editor_booty": {
            "keys": ["g"],
            "holdable": false
        }
    },
                                                     
    "viewport_resolution": [1280, 720],

    "cvars": {
        "permissions": {
            "type": "bool",
            "default": "rw",
            "description": "Read/Write permissions (Do not change)"
        },
        "file_drops": {
            "type": "bool",
            "default": false,
            "description": "Enable file drops."
        },
        "cheats": {
            "type": "bool",
            "default": false,
            "description": "Cheater!"
        },
        "can_fill_screen?": {
            "type": "bool",
            "default": true,
            "description": "Allow the game to empty the screen."
        },
        "glbl_scripts": {
            "type": "list",
            "default": [],
            "description": "Paths of scripts that will be autoloaded into the engine singleton `engine`."
        },
        "directory": {
            "type": "string",
            "default": "eklips",
            "description": "Directory for the game files."
        },
        "loading-scene": {
            "type": "string",
            "default": "root://internal/scn/loading.scn",
            "description": "Scene to be used for the loading animation."
        },
        "master-scene": {
            "type": "string",
            "default": "res://data/scenes/master.scn",
            "description": "Scene to be loaded at the start."
        },
        "con": {
            "type": "bool",
            "default": true,
            "description": "Enable the console."
        },
        "con_speed": {
            "type": "int",
            "default": 450,
            "description": "The speed of the console dropdown."
        },
        "con_size": {
            "type": "int or str",
            "default": "df",
            "description": "Height of the console dropdown. (df = half of the screen height)"
        },
        "con_rate": {
            "type": "int",
            "default": 2,
            "description": "Blink rate of the console host cursor. (x / 1 second)"
        },
        "ui_labelpoolamount": {
            "type": "int",
            "default": 100,
            "description": "Amount of label objects in the label pool to be premade."
        },
        "ui_layers": {
            "type": "int",
            "default": 25,
            "description": "The layers the UI module has access to (negative and positive)"
        },
        "icon_file": {
            "type": "string",
            "default": "res://media/icon.png",
            "description": "Project icon path."
        },
        "theme_file": {
            "type": "string",
            "default": "root://internal/themes/default.res",
            "description": "Global theme path."
        }
    },

    "cmd": {
        "help":        "@pointer=root://internal/scr/cmd/help.ekl\n# This dialog box",
        "con_clear":   "engine.console.console_text.clear()\n# Clear the console",
        "sv_list":     "\n# List all CVars",
        "eng_chproj":  "engine.Data.project_file = f'{args[0]}/game.json'\n# Change the project by passing the folder location of the game.json file.\nengine.Data.directory = f'{args[0]}'\nengine.reload_engine(args[0])",
        "eng_reload":  "engine.reload_engine()\n# Reload the engine",
        "eng_skip":    "@pointer=root://internal/scr/cmd/dswrld.ekl\n# This command basi and thats it.",
        "eng_memcl":    "@pointer=root://internal/scr/cmd/memcl.ekl\n# Reload all assets.",
        "memcl":    "@pointer=root://internal/scr/cmd/memcl.ekl\n# Reload all assets. (Shift friendly)",
        "chproj":      "engine.Data.project_file = f'{args[0]}/game.json'\n# Change the project by passing the folder location of the game.json file. (Shift friendly)\nengine.Data.directory = f'{args[0]}'\nengine.reload_engine(args[0])",
        "reload":      "engine.reload_engine()\n# Reload the engine (Shift friendly)"
    }
}